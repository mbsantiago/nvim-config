{
  "lspconfig": {
    "ltex": {
      "ltex": {
        "language": "en-GB"
      }
    },
    "texlab": {
      "texlab": {
        "chktex": {
          "onEdit": true
        }
      }
    },
    "yamlls": {
      "yamlls": {
        "yaml": {
          "format": {
            "enable": true
          }
        }
      }
    },
    "lua_ls": {
      "Lua": {
        "workspace": {
          "checkThirdParty": false
        },
        "diagnostics": {
          "globals": ["vim"]
        },
        "completion": {
          "callSnippet": "Replace"
        }
      }
    },
    "pyright": {
      "python": {
        "analysis": {
          "diagnosticMode": "workspace"
        }
      }
    }
  }
}
